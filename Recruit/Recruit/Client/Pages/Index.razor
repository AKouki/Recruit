@page "/"
@inject HttpClient Http
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <h3>Hello, @context.User?.FindFirst("name")?.Value.Split(" ")[0]!</h3>
    <div class="dashboard mt-3">
        <UpcomingInterviews OnSelectApplicant="ShowDetails" />
        <RecentApplicants OnSelectApplicant="ShowDetails" />
        <DuePositions />
    </div>

    <ApplicantDetails Applicant="CurrentApplicant" />
</AuthorizeView>

@code {
    public Applicant? CurrentApplicant { get; set; }

    private void ShowDetails(Applicant applicant)
    {
        CurrentApplicant = applicant;
    }
}